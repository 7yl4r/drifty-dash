{
    "name": "drifty-dash",
    "version": "0.0.3",
    "description": "Drifty's dashboard.",
    "dependencies": {

    },
    "devDependencies": {
        "chai": "^1.10.0",
	    "mocha": "^2.0.1",
        "coffee-script": "~1.4.0",
        "less": "~1.7.5",
        "browserify": "~9.0.3",
        "browserify-shim": "~3.8.3",
        "angular": "~1.3.14",
        "angular-bootstrap": "~0.12.0",
        "coffeeify": "~1.0.0",
        "coffeelint": "~1.9.3"
    },
    "browserify": {
        "transform": [
            "browserify-shim"
        ]
    },
    "browserify-shim": {
        "angular": {
            "exports": "angular"
        },
        "ui.bootstrap": {
            "depends": "angular",
            "exports": "angular.module('ui.bootstrap').name"
        }
    },
    "browser":{
        "angular": "./node_modules/angular/angular.min.js",
        "ui.bootstrap": "./node_modules/angular-bootstrap/ui-bootstrap.min.js",

        "demo-widget": "./ng-modules/demoWidget/demoWidget.js"
    },
    "scripts": {
        "pretest": "./node_modules/.bin/coffeelint -r ng-modules",
        "test": "./node_modules/.bin/mocha --compilers coffee:coffee-script/register test/*.test.coffee"
    }
}